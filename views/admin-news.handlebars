<div class="container">
    <div class="text-center"><h1>Admin Backend - News</h1></div>
    {{#iff news.length ">" 0}}
        <div class="row text-center">
            {{#each news as |news| }}
                <div class="col-md-3 col-xs-3">
                    <div class="thumbnail">
                        <div class="caption center-block">
                            {{!-- <a class="editNews" href="/news/{{ news.news_title }}/edit" data-id="{{ news._id}}"> <i class="fa fa-pencil"></i></a> --}}
                            <a class="deleteNews" href="/news/{{ news.news_title }}/delete" data-id="{{ news._id}}"> <i class="fa fa-trash"></i></a>
                            {{ news.news_title }}<br />
                            {{#if news.is_published}}
                                Published - <a class="unpublishNews" href="" data-id="{{ news._id}}">Unpublish</a>
                            {{else}}
                                Unpublished - <a class="publishNews" href="" data-id="{{ news._id}}">Publish</a>
                            {{/if}}
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    {{else}}
        <hr>
        There are no news articles at this time.
    {{/iff}}
    <hr><br>
    <form action="/admin/news/new" method="post">
        <div class="form-group">
            News Title<br> <input type="text" class="custom-text" name="news_title" placeholder="News Title"
                                    {{#if news_title}}value="{{news_title}}"{{/if}}><br><br>
            News Content - Max 2000 characters<br>
            <textarea class="input-block-level" id="editor" name="news_description">{{#if news_description}}{{ news_description }}{{/if}}</textarea>
        </div>
        <button type="submit" class="btn btn-primary">
        <span class="glyphicon glyphicon-pencil"></span> Submit News</button>
    </form>
</div>