<div class="container" id="login" hx-ext="response-targets">
    <div class="container">
        <div class="row vertical-offset-100">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Login</h3>
                    </div>
                    <div class="panel-body">
                        <form accept-charset="UTF-8" id="login" hx-post="/login" hx-swap="beforebegin" hx-target="#login" hx-target-error="#login" hx-params="*">
                            <input type="hidden" name="_csrf" value="{{csrfToken}}">
                            <fieldset>
                                <div class="form-group">
				                    <div class="input-group loginformtext">
                                        <div class="input-group addon">
                                            <span class="input-group-addon" id="basic-addon1">
                                                <i class="fa fa-user"></i>
                                            </span>
                                            <input class="form-control" placeholder="Username"
                                                   name="username" type="text" id="username" required>
					                    </div>
				                    </div>
                                </div>
                                <div class="form-group">
				                    <div class="input-group loginformtext">
                                        <div class="input-group addon">
                                            <span class="input-group-addon" id="basic-addon1">
                                                <i class="fa fa-lock"></i>
                                            </span>
                                            <input class="form-control" placeholder="Password"
                                                   name="password" type="password" value="" id="password" autocomplete="on" required>
					                    </div>
                                        <span id="forgot_password" class="pull-left"><a href="/reset">Forgot Password</a></span>
				                    </div>
                                    <span id="password-message">Caps Lock is On!</span>
                                </div>
                                <input class="btn btn-lg btn-primary btn-block" type="submit" value="Login">
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
