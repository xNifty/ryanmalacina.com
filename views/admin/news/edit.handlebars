<div class="container">
    <a class="newsback" href="/admin/news" data-toogle="tooltip" title="Return to news"> <i class="fa fa-long-arrow-left"></i></a>
    <form action="/admin/news/edit" method="post" data="{{news._id}}">
        <div class="form-group">
            News Title<br> <input type="text" class="custom-text" name="news_title" placeholder="News Title"
                                    {{#if news_title}}value="{{news_title}}"{{/if}}><br><br>
            News Content - Max 2000 characters<br>
            <textarea class="input-block-level" id="editor" name="news_description">{{#if news_description}}{{ news_description }}{{/if}}</textarea>
        </div>
        <button type="submit" class="btn btn-primary">
        <span class="glyphicon glyphicon-pencil"></span> Submit Edited News</button>
    </form>
</div>
