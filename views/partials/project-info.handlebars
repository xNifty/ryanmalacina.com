<div class="container">
    <div class="text-center">
        <div class="{{ type }}">{{ message }}</div>
        <h1>{{ project_title }}</h1>
        <h4><a href="{{ project_source }}" target="_blank">Source</a></h4>
    </div>
    <p>{{{ project_description }}}</p>
    <p>Project Last Updated: {{ last_save_date }}</p>
    {{#if authenticated}}
        <div id="edit">
            <a href="{{project_name}}/edit" class="btn btn-primary">
                <span class="glyphicon glyphicon-pencil"></span> Edit Project</a>
        </div>
    {{/if}}
</div>
